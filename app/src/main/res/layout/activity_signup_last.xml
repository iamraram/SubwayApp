<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignupLastActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="계정 만들기"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25dp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/etName1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="로딩 중..."
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:layout_marginRight="20dp"
        android:textColor="@color/face_signature"
        android:background="@drawable/roundbuttonwhitegray"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:outlineProvider="none"
        tools:ignore="HardcodedText"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:focusableInTouchMode="false"
        android:textColorHint="@color/face_gray"
        />

    <EditText
        android:id="@+id/etEmail1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="로딩 중..."
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:layout_marginRight="20dp"
        android:focusableInTouchMode="false"
        android:textColor="@color/face_signature"
        android:background="@drawable/roundbuttonwhitegray"
        app:layout_constraintTop_toBottomOf="@id/etName1"
        android:outlineProvider="none"
        tools:ignore="HardcodedText"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColorHint="@color/face_gray"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="비밀번호 입력"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/etEmail1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25dp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/etPw1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="8자 이상의 비밀번호를 입력해주세요"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:layout_marginRight="20dp"
        android:textColor="@color/face_signature"
        android:background="@drawable/roundbuttonwhite"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:outlineProvider="none"
        tools:ignore="HardcodedText"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColorHint="@color/face_gray"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/etPw2"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="비밀번호를 다시 입력해주세요"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:layout_marginRight="20dp"
        android:textColor="@color/face_signature"
        android:background="@drawable/roundbuttonwhite"
        app:layout_constraintTop_toBottomOf="@id/etPw1"
        android:outlineProvider="none"
        tools:ignore="HardcodedText"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColorHint="@color/face_gray"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/textCaution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:text="두 비밀번호가 일치하지 않습니다"
        app:layout_constraintTop_toBottomOf="@+id/etPw2"
        android:textColor="@color/face_red"
        android:visibility="invisible"
        tools:ignore="HardcodedText,RtlHardcoded,TextViewEdits" />

    <TextView
        android:id="@+id/textBack"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="이전 단계로 돌아가기"
        app:layout_constraintBottom_toTopOf="@+id/nextBtn2"
        android:textColor="@color/face_gray"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        android:id="@+id/nextBtn2"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="완료"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:background="@drawable/roundbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:outlineProvider="none"
        android:layout_weight="1"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>