<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignupActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="계정 만들기"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25dp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="사용할 이름을 입력해주세요"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:layout_marginRight="20dp"
        android:textColor="@color/face_signature"
        android:background="@drawable/roundbuttonwhite"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:outlineProvider="none"
        tools:ignore="HardcodedText"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColorHint="@color/face_gray"
    />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="이메일을 입력해주세요"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:layout_marginRight="20dp"
        android:textColor="@color/face_signature"
        android:background="@drawable/roundbuttonwhite"
        app:layout_constraintTop_toBottomOf="@id/etName"
        android:outlineProvider="none"
        tools:ignore="HardcodedText"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColorHint="@color/face_gray"
    />

    <TextView
        android:id="@+id/textCaution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:text="이메일 형식을 지켜서 입력해주세요."
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        android:textColor="@color/face_red"
        android:visibility="invisible"
    />

    <Button
        android:id="@+id/nextBtn1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="다음"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:background="@drawable/roundbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:outlineProvider="none"
        android:layout_weight="1"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>